<%= simple_form_for @recurring_event, remote: true do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control' } %>
    <%= f.input :anchor, input_html: { class: "form-control input-sm anchor-date" } %>
    
    <%= f.input :frequency, as: :select, collection: RecurringEvent.frequencies.keys, input_html: { class: "form-control input-sm" } %>
    <%= f.input :color, as: :select, collection: [['Black','black'], ['Green','green'], ['Red','red']], input_html: { class: "form-control input-sm" } %>
  </div>

  <div class="form-actions">
    <%= link_to 'Back', 
                new_event_path,
                class: 'btn btn-primary', 
                remote: true if @recurring_event.new_record? %>
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Delete', 
                @recurring_event, 
                method: :delete, 
                class: 'btn btn-danger', 
                data: { confirm: 'Are you sure?' }, 
                remote: true unless @recurring_event.new_record? %>
  </div>
<% end %>